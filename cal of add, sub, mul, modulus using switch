#include<stdio.h>
int main()
{
char op;
int a,b ;
printf("enter the operator ");
scanf("%c",&op);
printf(" enter the values  ");
scanf("%d%d",&a,&b);
switch (op)
{
case '+':
printf("%d + %d = %d" ,a,b,a+b);
break;
case'-':
printf("%d-%d=%d",a,b,a-b);
break;
case'*':
printf("%d*%d=%d",a,b,a*b);
break;
case'%':
printf("%d%%d=%d",a,b,a%b);
break;
default:
printf(" invalid operator ");
break;
}
	return 0;	
}
